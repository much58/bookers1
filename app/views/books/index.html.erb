<body>
  <h2 class = index_books>Books</h2>
  <ul class = index>
    <li class = index_title >title</li>
    <li class = index_body >body</li>
  </ul>


<% @books.each do |book| %>
  <div class = index_list>
      <span class = index_list_title>
        <%= book.title %>
      </span>

      <span class = index_list_body>
        <%= book.body %>
      </span>

    <div class = index_link>
      <%= link_to 'show', "/books/#{book.id}" %>
      <%= link_to 'edit', "/books/#{book.id}/edit" %>
      <%= link_to 'destroy', "/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>


  </div>


<% end %>



  <h2 class = index_new>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |f| %>
    <div class = title_field>
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>

    <div class = body_field>
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>

    <div class = submit_field>
      <%= f.submit 'Create Book' %>
    </div>


  <% end %>



</body>

