<body>
  <h2 class = index_books>Books</h2>

<table>
  <tr>
    <th class = index_title>Title</th>
    <th class = index_body>Body</th>
  </tr>

  <% @books.each do |book| %>
  <tr class = index_list>
    <td class = index_list_title><%= book.title %></td>
    <td class = index_list_body><%= book.body %></td>
    <td class = index_link>
       <%= link_to 'Show', "/books/#{book.id}" %>
      <%= link_to 'Edit', "/books/#{book.id}/edit" %>
      <%= link_to 'Destroy', "/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </td>
  </tr>


  <% end %>

</table>


  <h2 class = index_new>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |f| %>
    <div class = title_field>
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>

    <div class = body_field>
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>

    <div class = submit_field>
      <%= f.submit 'Create Book' %>
    </div>


  <% end %>



</body>

